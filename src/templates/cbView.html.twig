{% extends "base.html.twig" %}
{% block menu %}
    {% for menuItem in menu %}
        <a href="{{ menuItem.route }}" class="btn btn-ghost text-xl">
            {{ menuItem.caption }}
        </a>
    {% endfor %}
{% endblock %}

{% block body %}
    {% if user %}
        <h1>Utilisateur : {{user.login}}</h1>
        <div class="divider"></div>
        {% if cb.operations %}
            <h2>Opérations :</h2>
            <ul>
                {% for op in cb.operations %}
                    <li>{{ op.intitule }} -> {{ op.montant }}€</li>
                {% endfor %}
            </ul>
        {% endif %}
    {% else %}
        <div role="alert" class="alert shadow-lg">
            <div>
                <h3 class="font-bold">Utilisateur</h3>
                <div class="text-xs">Aucun utilisateur créé !</div>
            </div>
            <a href="/newUser" class="btn btn-sm">Créer un utilisateur</a>
        </div>
    {% endif %}
{% endblock %}